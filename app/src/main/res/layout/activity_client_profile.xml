<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="160dp"
    android:background="@drawable/background2">

    <!-- User Image -->
    <ImageView
        android:id="@+id/user_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:background="#80000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="24sp"
                android:layout_marginTop="8dp"/>
        <TextView
        android:id="@+id/passport_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passport: ABC123"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/flight_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight: AC123"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <!-- Payment Details -->
    <TextView
        android:id="@+id/payment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid: $500"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>

    <!-- Companion Details -->
    <TextView
        android:id="@+id/companion_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With: Jane Doe"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <!--
    <TextView
        android:id="@+id/medical_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Conditions: None"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
